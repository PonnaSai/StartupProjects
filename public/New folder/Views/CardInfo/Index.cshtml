@model BalanceTransfer.ViewModel.CardInfoViewModel

@{
    ViewBag.Title = "Card Info";
    Layout = "~/Views/Shared/_FISLayout.cshtml";
}


<div ng-controller="cardInfoController" ng-init="initController(@Newtonsoft.Json.JsonConvert.SerializeObject(Model, new Newtonsoft.Json.JsonSerializerSettings()
                                                        {
                                                            ContractResolver = new Newtonsoft.Json.Serialization.CamelCasePropertyNamesContractResolver()
                                                        }))">
    <div class="col-xs-24" ng-show="errors.length > 0" ng-cloak>
        <ul class="alert alert-danger">
            <li class="list-item-xs" ng-repeat="error in errors track by $index" ng-bind="error">
            </li>
        </ul>
    </div>
    <div class="col-md-24">
        <form class="form-horizontal" role="form" name="cardInfoForm" novalidate>
            <div class="row">
                <div class="form-group-xs">
                    <label class="col-md-3 control-label" for="accountNumber">Account Number: </label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="accountNumber" id="accountNumber" allow-only-numbers
                            ng-model="fromAccount.accountNoTransferTo" ng-disabled="accountRetreived == true" maxlength="16" />
                    </div>
                    <div class="col-md-15">
                        <div class="btn-toolbar">
                            <button class="btn btn-xs fis-rwd-btn-primary" type="button"
                                ng-click="submit()" ng-show="accountRetreived != true">Submit</button>
                            <button class="btn btn-xs fis-rwd-btn-primary" type="button"
                                ng-click="reset()" ng-show="accountRetreived == true">Reset</button>
                            <button id=btnBalanceTransfer" class="btn btn-xs fis-rwd-btn-primary"
                                ng-click="balanceTransfer()" ng-show="accountRetreived == true">Balance Transfer</button>
                            <button id=btnInquiry" class="btn btn-xs fis-rwd-btn-primary" 
                                ng-click="inquiry()" ng-show="accountRetreived == true">Inquiry</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <card-holder-info from-account="fromAccount"></card-holder-info>
</div>

